{% extends 'base.html.twig' %}

{% block title %}Paroisse | Agenda{% endblock %}

{% block body %}

<div class="shortEvents">
    <table>
        <thead>
            <tr>
                <th>Intitulé</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr></tr>
            {% for event in events %}
                <tr>
                    <td>{{ event.intitule }}</td>
                    <td>{{ event.dateEvent | date("d/m/Y") }}</td>
                    {% if event.dateFin < now %}
                        <td class="pastDate">{{ event.dateFin | date("d/m/Y") }}</td>
                    {% else %}
                        <td class="currentRun">{{ event.dateFin | date("d/m/Y") }}</td>    
                    {% endif %}
                    <td><a href="{{ path('edit_event', {'id': event.id }) }}"><i class="fa-solid fa-pencil"></i></a> | <a href="{{ path('suppr_event', {'id': event.id }) }}"><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}